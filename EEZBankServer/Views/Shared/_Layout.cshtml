<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EEZ Bank</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/layout.css" />
    
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">

    <link href="https://fonts.googleapis.com/css2?family=Inter..." rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="eez-body">
    <header class="eez-navbar">
        <div class="container">
            <nav class="eez-nav-content">
                <div class="eez-nav-brand">
                    <a href="/" class="eez-logo-link">
                        <img src="~/images/eez-bank-logo.png" alt="EEZ Bank Logo" class="eez-logo-img" />
                    </a>
                </div>

                <button class="eez-nav-toggle" id="navToggle">
                    <span></span><span></span><span></span>
                </button>

                <ul class="eez-nav-menu" id="navMenu">
                    <li class="eez-nav-item">
                        <a asp-controller="Location" asp-action="Index" class="eez-nav-link">Şube ve Atm Bul</a>
                    </li>
                    <li class="eez-nav-item">
                        <a asp-controller="Home" asp-action="Hizmetler" class="eez-nav-link">Hizmetler</a>
                    </li>
                    <li class="eez-nav-item">
                        <a asp-controller="Home" asp-action="Hakkımızda" class="eez-nav-link">Hakkımızda</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        @* GİRİŞ YAPMIŞ KULLANICI PANELLERİ *@
                        <li class="eez-nav-item">
                            <a asp-controller="Account" asp-action="Profile" class="eez-user-btn">
                                <i class="fas fa-user-circle"></i> @User.FindFirst("FullName")?.Value
                            </a>
                        </li>
                        <li class="eez-nav-item">
                            <a asp-controller="Account" asp-action="Logout" class="eez-btn eez-btn-danger eez-btn-sm">Çıkış Yap</a>
                        </li>
                    }
                    else
                    {
                        @* MİSAFİR KULLANICI PANELLERİ *@
                        <li class="eez-nav-item">
                            <a asp-controller="Account" asp-action="Register" class="eez-nav-link">Müşteri Ol</a>
                        </li>
                        <li class="eez-nav-item">
                            <a asp-controller="Account" asp-action="Login" class="eez-btn eez-btn-primary eez-btn-sm">Giriş Yap</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </header>

    <main role="main" class="ee-main-content">
        @RenderBody()
    </main>

    <footer class="eez-footer">
        <div class="container">
            <div class="eez-footer-grid">
                <div class="eez-footer-column">
                    <h4>EEZ Bank</h4>
                    <p>Güvenli ve modern bankacılık hizmetleri</p>
                </div>

                <div class="eez-footer-column">
                    <h4>Hızlı Linkler</h4>
                    <ul class="eez-footer-links">
                        <li><a href="/Home/Hakkımızda">Hakkımızda</a></li>
                        <li><a href="/Home/Hizmetler">Hizmetler</a></li>
                    </ul>
                </div>

                <div class="eez-footer-column">
                    <h4>Ürünler</h4>
                    <ul class="eez-footer-links">
                        <li><a href="#">Hesaplar</a></li>
                    </ul>
                </div>

                <div class="eez-footer-column">
                    <h4>Destek</h4>
                    <ul class="eez-footer-links">
                        <li><a asp-area="Destek" asp-controller="Sss" asp-action="Index" >SSS</a></li>
                        <li><a asp-controller="home" asp-action="privacy" >Gizlilik Politikası</a></li>
                    </ul>
                </div>
            </div>

            <div class="eez-footer-bottom text-center">
                <p>&copy; @DateTime.Now.Year EEZ Bank. Tüm hakları saklıdır.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/eez-core.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>