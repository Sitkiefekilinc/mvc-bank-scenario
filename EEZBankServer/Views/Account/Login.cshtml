@{
    ViewData["Title"] = "Giriş Yap";
}

@model EEZBankServer.Models.LoginViewModel

<link rel="stylesheet" href="~/css/Account/login.css" />

<div class="login-page">
    <div class="login-card">
        <div class="login-header">
            <img src="~/images/eez-bank-logo.png" class="login-logo" alt="EEZ Bank" />
            <h2>EEZ Bank Giriş</h2>
            <p>Hesabınıza güvenle giriş yapın</p>
        </div>

        <form asp-controller="Account" asp-action="Login" method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 0.9rem; font-weight: 600;"></div>

            <div class="input-group">
                <label asp-for="Email">E-Posta</label>
                <input type="email" asp-for="Email" placeholder="email@example.com" />
                <span asp-validation-for="Email" class="error-text"></span>
            </div>

            <div class="input-group">
                <label asp-for="Password">Şifre</label>
                <input type="password" asp-for="Password" placeholder="••••••••" />
                <span asp-validation-for="Password" class="error-text"></span>
            </div>

            <div class="remember-me-group">
                <input type="checkbox" asp-for="RememberMe" id="RememberMe" />
                <label for="RememberMe">Beni Hatırla</label>
            </div>

            <div class="input-group">
                <button type="submit" class="btn btn-primary btn-full">Giriş Yap</button>
            </div>

            <div class="form-links">
                <a asp-action="ForgotPassword">Şifremi Unuttum</a>
                <a asp-action="MusteriOl">Hesap Oluştur</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

}