@model ProfileViewModel
@{
    ViewData["Title"] = "Hesap Paneli";
}

<link rel="stylesheet" href="~/css/Account/profile.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800;900&display=swap" rel="stylesheet">


<div class="fintech-profile-root">
    <div class="container">

        <div class="profile-header-area">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-4 fw-black text-dark-eez m-0">Profilim.</h1>
                    <p class="text-secondary mt-2">Hesap bilgilerinizi ve finansal özetinizi buradan yönetin.</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="status-badge shadow-sm">
                        <span class="status-dot pulse"></span>
                        <span class="status-label">Güvenli Oturum</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-custom-5">
            <div class="col-lg-5">

                <div class="digital-bank-card-wrapper position-relative">

                    @if (Model.Hesaplar != null && Model.Hesaplar.Any())
                    {
                        <div id="accountsCarousel" class="carousel slide" data-bs-interval="false">
                            <div class="carousel-inner">
                                @for (int i = 0; i < Model.Hesaplar.Count; i++)
                                {
                                    var hesap = Model.Hesaplar[i];
                                    var isActive = i == 0 ? "active" : "";

                                    <div class="carousel-item @isActive"
                                         data-balance="@hesap.Balance"
                                         data-currency="@hesap.CurrencyCode"
                                         data-iban="@hesap.Iban">

                                        <div class="digital-bank-card shadow-2xl">
                                            <div class="card-inner">
                                                <div class="d-flex justify-content-between mb-5">
                                                    <img src="~/images/eez-bank-logo-white.png" height="35" alt="EEZ" />
                                                    <span class="text-white-50 small fw-bold text-uppercase border border-white px-2 rounded-pill" style="height:fit-content; border-color:rgba(255,255,255,0.3)!important;">
                                                        @hesap.AccountName
                                                    </span>
                                                </div>
                                                <div class="iban-display mt-auto">
                                                    <small class="d-block opacity-50 mb-1">HESAP IBAN</small>
                                                    <span class="iban-number" style="letter-spacing: 1px;">
                                                        @hesap.Iban
                                                    </span>
                                                </div>
                                                <div class="card-holder mt-4">
                                                    <small class="d-block opacity-50">HESAP SAHİBİ</small>
                                                    <span class="fw-bold">@Model.UserAccountInfos.UserName.ToUpper() @Model.UserAccountInfos.UserSurname.ToUpper()</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (Model.Hesaplar.Count > 1)
                            {
                                <button class="carousel-control-prev" type="button" data-bs-target="#accountsCarousel" data-bs-slide="prev">
                                    <span class="card-arrow"><i class="fas fa-chevron-left text-white"></i></span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#accountsCarousel" data-bs-slide="next">
                                    <span class="card-arrow"><i class="fas fa-chevron-right text-white"></i></span>
                                </button>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">Henüz bir hesabınız bulunmamaktadır.</div>
                    }
                </div>

                <div class="balance-card-modern shadow-lg mt-5">
                    <div class="balance-content">
                        <label class="text-muted fw-bold small text-uppercase mb-3 d-block">Kullanılabilir Bakiye</label>
                        <div class="d-flex align-items-baseline gap-2">
                            <h2 id="displayBalance" class="display-5 fw-black text-dark-eez m-0">
                                @(Model.Hesaplar.FirstOrDefault()?.Balance.ToString("N2") ?? "0.00")
                            </h2>
                            <span id="displayCurrency" class="currency-tag">
                                @(Model.Hesaplar.FirstOrDefault()?.CurrencyCode ?? "TRY")
                            </span>
                        </div>
                    </div>
                    <div class="balance-actions border-top">
                        <button class="b-action-btn border-end" id="btnCopyIban">
                            <i class="far fa-copy me-2"></i> IBAN Kopyala
                        </button>
                        <button class="b-action-btn">
                            <i class="fas fa-history me-2"></i> Geçmiş
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="info-section-wrapper p-4 bg-white shadow-sm">
                    <h4 class="fw-bold mb-5 text-dark-eez border-bottom pb-3">Kişisel Bilgiler</h4>

                    <form id="profileUpdateForm" asp-controller="Account" asp-action="HesapGuncelle" method="post">

                        @Html.AntiForgeryToken()

                        <input type="hidden" name="UserAccountInfos.UserId" value="@Model.UserAccountInfos.UserId" />

                        <div class="row g-5">
                            <div class="col-md-6">
                                <div class="fintech-info-item">
                                    <label>T.C. KİMLİK</label>
                                    <p class="text-muted">@Model.UserAccountInfos.TcKimlikNo.Substring(0, 3)********</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="fintech-info-item">
                                    <label>DOĞUM TARİHİ</label>
                                    <p class="text-muted">@Model.UserAccountInfos.UserBirthDate.ToString("dd.MM.yyyy")</p>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="fintech-info-item">
                                    <label>E-POSTA ADRESİ</label>
                                    <p class="view-mode">@Model.UserAccountInfos.UserEmail</p>
                                    <input type="email" name="UserAccountInfos.UserEmail" class="form-control edit-mode d-none" value="@Model.UserAccountInfos.UserEmail" required />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="fintech-info-item">
                                    <label>TELEFON NUMARASI</label>
                                    <p class="view-mode">@Model.UserAccountInfos.UserPhoneNumber</p>
                                    <input type="text" name="UserAccountInfos.UserPhoneNumber" class="form-control edit-mode d-none" value="@Model.UserAccountInfos.UserPhoneNumber" required />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="fintech-info-item">
                                    <label>MÜŞTERİ TİPİ</label>
                                    <p class="text-muted">@Model.UserAccountInfos.UserType Müşterisi</p>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="fintech-info-item border-0">
                                    <label>KAYITLI ADRES</label>
                                    <p class="view-mode lh-base">@Model.UserAccountInfos.Adress</p>
                                    <textarea name="UserAccountInfos.Adress" class="form-control edit-mode d-none" rows="3" required>@Model.UserAccountInfos.Adress</textarea>
                                </div>
                            </div>
                        </div>

                        <div class="mt-5 pt-4 d-flex gap-3">
                            <button type="button" id="btnEditMode" class="btn btn-eez-dark view-mode-btn">Bilgileri Düzenle</button>

                            <button type="submit" id="btnSave" class="btn btn-success edit-mode-btn d-none">
                                <i class="fas fa-check me-1"></i> Değişiklikleri Kaydet
                            </button>
                            <button type="button" id="btnCancel" class="btn btn-danger edit-mode-btn d-none">
                                <i class="fas fa-times me-1"></i> İptal
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/profile.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // --- DEĞİŞKENLER ---
            var carouselEl = document.getElementById('accountsCarousel');
            var displayBalance = document.getElementById('displayBalance');
            var displayCurrency = document.getElementById('displayCurrency');
            var btnCopyIban = document.getElementById('btnCopyIban');

            var currentIban = '@(Model.Hesaplar.FirstOrDefault()?.Iban ?? "")';

            if (carouselEl) {
                // Slider her kaydığında (slid.bs.carousel) tetiklenir
                carouselEl.addEventListener('slid.bs.carousel', function (event) {

                    // Yeni gelen aktif kartı bul
                    var activeItem = event.relatedTarget;

                    // Kartın üzerindeki data-... özelliklerini oku
                    var newBalance = activeItem.getAttribute('data-balance');
                    var newCurrency = activeItem.getAttribute('data-currency');

                    // Aktif IBAN'ı güncelle
                    currentIban = activeItem.getAttribute('data-iban');

                    // Bakiyeyi Formatla (Türk Lirası formatı)
                    // newBalance string gelebilir, virgül/nokta düzeltmesi yapıyoruz
                    var rawBalance = parseFloat(newBalance.replace(',', '.'));

                    var formattedBalance = rawBalance.toLocaleString('tr-TR', {
                        minimumFractionDigits: 2,
                        maximumFractionDigits: 2
                    });

                    // Ekrandaki yazıyı güncelle (Ufak bir animasyon ile)
                    if(displayBalance) {
                        displayBalance.style.opacity = 0;
                        setTimeout(() => {
                            displayBalance.innerText = formattedBalance;
                            if(displayCurrency) displayCurrency.innerText = newCurrency;
                            displayBalance.style.opacity = 1;
                        }, 200);
                    }
                });
            }

            // --- KOPYALAMA BUTONU ---
            if (btnCopyIban) {
                btnCopyIban.addEventListener('click', function () {
                    if (currentIban && typeof EEZ !== 'undefined') {
                        EEZ.CopyIban(currentIban);
                    } else {
                        console.error("IBAN bulunamadı veya EEZ kütüphanesi yüklenmedi.");
                    }
                });
            }
        });
    </script>
}