@{
    ViewData["Title"] = "Ana Sayfa";
}

<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1>EEZ Bank'a Hoş Geldiniz</h1>
            <p class="lead">Güvenli, hızlı ve modern bankacılık hizmetleri</p>
            <div class="hero-buttons">
                <a href="#" class="btn btn-primary">Hesap Aç</a>
                <a href="#" class="btn btn-outline">Daha Fazla Bilgi</a>
            </div>
        </div>
    </div>
</section>

<section class="services-section">
    <div class="container">
        <h2 class="section-title">Hizmetlerimiz ve Piyasalar</h2>
        <div class="services-grid">

            @await Component.InvokeAsync("DovizKurlari")

            <div class="service-card">
                <div class="service-icon"><i class="icon-account"></i></div>
                <h3>Hesap İşlemleri</h3>
                <p>Vadesiz hesap, mevduat hesabı ve daha fazlası</p>
                <a href="#" class="service-link">Detaylar</a>
            </div>

            <div class="service-card">
                <div class="service-icon"><i class="icon-transfer"></i></div>
                <h3>Para Transferi</h3>
                <p>Hızlı ve güvenli para transferi işlemleri</p>
                <a href="#" class="service-link">Detaylar</a>
            </div>


            <div class="service-card">
                <div class="service-icon"><i class="icon-credit-card"></i></div>
                <h3>Kredi Kartları</h3>
                <p>İhtiyacınıza uygun kredi kartı seçenekleri</p>
                <a href="#" class="service-link">Detaylar</a>
            </div>

            <div class="service-card">
                <div class="service-icon"><i class="icon-loan"></i></div>
                <h3>Krediler</h3>
                <p>Avantajlı kredi imkanları</p>
                <a href="#" class="service-link">Detaylar</a>
            </div>
        </div>
    </div>
</section>

<section class="features-section">
    <div class="container">
        <h2 class="section-title">Neden EEZ Bank?</h2>
        <div class="features-grid">
            <div class="feature-item">
                <div class="feature-icon"><i class="icon-security"></i></div>
                <h4>Güvenli</h4>
                <p>256-bit SSL şifreleme ile güvenli işlemler</p>
            </div>
            <div class="feature-item">
                <div class="feature-icon"><i class="icon-fast"></i></div>
                <h4>Hızlı</h4>
                <p>7/24 anlık işlem yapabilme imkanı</p>
            </div>
            <div class="feature-item">
                <div class="feature-icon"><i class="icon-support"></i></div>
                <h4>Destek</h4>
                <p>Kesintisiz müşteri hizmetleri desteği</p>
            </div>
            <div class="feature-item">
                <div class="feature-icon"><i class="icon-mobile"></i></div>
                <h4>Mobil</h4>
                <p>Mobil uygulama ile her yerden erişim</p>
            </div>
        </div>
    </div>
</section>

<section class="stats-section">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-item">
                <h3 class="stat-number">1M+</h3>
                <p class="stat-label">Aktif Müşteri</p>
            </div>
            <div class="stat-item">
                <h3 class="stat-number">500+</h3>
                <p class="stat-label">Şube</p>
            </div>
            <div class="stat-item">
                <h3 class="stat-number">24/7</h3>
                <p class="stat-label">Müşteri Desteği</p>
            </div>
            <div class="stat-item">
                <h3 class="stat-number">15+</h3>
                <p class="stat-label">Yıllık Tecrübe</p>
            </div>
        </div>
    </div>
</section>

<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2>Hemen Başlayın</h2>
            <p>Birkaç dakika içinde hesap açın ve bankacılık hizmetlerimizden yararlanmaya başlayın</p>
            <a href="#" class="btn btn-light">Hesap Aç</a>
        </div>
    </div>
</section>