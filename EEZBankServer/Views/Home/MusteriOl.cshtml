@{
    ViewData["Title"] = "Müşteri Ol";
}

<link rel="stylesheet" href="~/css/site.css" />

<main style="padding: 60px 0; background-color: var(--light-color);">

    <div class="container">

        <h2 class="section-title">Müşteri Ol</h2>

        <div class="services-grid">

            <!-- Bireysel Müşteri -->
            <a asp-controller="Home" asp-action="BireyselMusteriOl" class="service-card" style="text-decoration:none;">
                <div class="service-icon">
                    👤
                </div>
                <h3>Bireysel Müşteri</h3>
                <p>
                    Bireysel bankacılık hizmetlerinden yararlanmak için hızlıca kayıt oluşturun.
                </p>
                <span class="service-link">Devam Et</span>
            </a>

            <!-- Kurumsal Müşteri -->
            <a asp-controller="Home" asp-action="KurumsalMusteriOl" class="service-card" style="text-decoration:none;">
                <div class="service-icon">
                    🏢
                </div>
                <h3>Kurumsal Müşteri</h3>
                <p>
                    Şirketiniz için hesap açın, ödeme sistemleri ve ticari çözümlerden yararlanın.
                </p>
                <span class="service-link">Devam Et</span>
            </a>

            <!-- Ticari Müşteri -->
            <a asp-controller="Home" asp-action="TicariMusteriOl" class="service-card" style="text-decoration:none;">
                <div class="service-icon">
                    💼
                </div>
                <h3>Ticari Müşteri</h3>
                <p>
                    İşletmenize özel ticari bankacılık avantajlarıyla hesap oluşturun.
                </p>
                <span class="service-link">Devam Et</span>
            </a>

        </div>

    </div>

</main>

<script src="~/js/site.js"></script>
