@{
    ViewData["Title"] = "Kurumsal Müşteri Ol";
}

<link rel="stylesheet" href="~/site.css" />
<script src="~/site.js"></script>

<main>
    <!-- =============================== -->
    <!-- HERO -->
    <!-- =============================== -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1>Kurumsal Müşteri Ol</h1>
                <p class="lead">
                    EEZBank ile şirketiniz için profesyonel kurumsal bankacılık çözümleri.
                </p>
            </div>
        </div>
    </section>

    <!-- =============================== -->
    <!-- FORM -->
    <!-- =============================== -->
    <section class="services-section" style="padding:60px 0;">
        <div class="container">
            <h2 class="section-title">Kurumsal Hesap Başvuru Formu</h2>

            <div class="service-card" style="max-width:700px; margin:auto; text-align:left;">

                <form asp-action="CorporateRegister" method="post">

                    <!-- KURUM BİLGİLERİ -->
                    <h3 style="margin-bottom:20px; color:var(--primary-color);">Kurum Bilgileri</h3>

                    <div style="margin-bottom:20px;">
                        <label>Kurum Adı</label>
                        <input type="text" name="InstitutionName" class="form-control"
                               placeholder="Örn: Isparta Eğitim ve Sağlık Kurumu" required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>Kurum Türü</label>
                        <select name="InstitutionType" class="form-control" required>
                            <option value="">Seçiniz</option>
                            <option value="Kamu">Kamu Kurumu</option>
                            <option value="Belediye">Belediye</option>
                            <option value="Üniversite">Üniversite</option>
                            <option value="Dernek">Dernek</option>
                            <option value="Vakıf">Vakıf</option>
                            <option value="Holding">Holding / Büyük Kuruluş</option>
                        </select>
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>Vergi Numarası</label>
                        <input type="text" name="TaxNumber" class="form-control"
                               placeholder="10 haneli vergi numarası" required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>Kurum Adresi</label>
                        <input type="text" name="Address" class="form-control"
                               placeholder="Kurumun açık adresi" required />
                    </div>

                    <hr style="margin:30px 0;" />

                    <!-- YETKİLİ BİLGİLERİ -->
                    <h3 style="margin-bottom:20px; color:var(--primary-color);">Yetkili Kişi Bilgileri</h3>

                    <div style="margin-bottom:20px;">
                        <label>Ad Soyad</label>
                        <input type="text" name="AuthorizedName" class="form-control"
                               placeholder="Yetkili kişinin adı ve soyadı" required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>Görevi</label>
                        <input type="text" name="AuthorizedRole" class="form-control"
                               placeholder="Örn: Müdür, Başkan Yardımcısı, Koordinatör" required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>Telefon</label>
                        <input type="text" name="Phone" class="form-control"
                               placeholder="05xx xxx xx xx" required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>E-Posta</label>
                        <input type="email" name="Email" class="form-control"
                               placeholder="example@example.com" required />
                    </div>

                    <hr style="margin:30px 0;" />

                    <!-- SÖZLEŞME -->
                    <div style="margin-bottom:20px;">
                        <label style="display:flex; align-items:center; gap:10px; cursor:pointer;">
                            <input type="checkbox" required />
                            <span>Kurumsal Bankacılık Sözleşmesi ve KVKK metnini kabul ediyorum.</span>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary" style="width:100%; margin-top:20px;">
                        Başvuruyu Gönder
                    </button>

                </form>

            </div>
        </div>
    </section>
</main>

<style>
    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        font-size: 1rem;
        margin-top: 5px;
        transition: 0.2s;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            outline: none;
            box-shadow: var(--shadow);
        }
</style>