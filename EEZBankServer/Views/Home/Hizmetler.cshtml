@{
    ViewData["Title"] = "Hizmetler";
}

<link rel="stylesheet" href="~/site.css" />
<script src="~/site.js"></script>

<main>
    <section class="services-section">
        <div class="container">

            <h2 class="section-title">Hizmetlerimiz</h2>

            <div class="services-grid">

                <div class="service-card">
                    <service-icon symbol="credit-card"></service-icon>

                    <h3>Kredi Hizmetleri</h3>
                    <p>
                        Bireysel ve ticari müşterilerimiz için hızlı onaylı kredi çözümleri sunuyoruz.
                    </p>
                    <a href="#" class="service-link">Detaylı Bilgi</a>
                </div>

                <div class="service-card">
                    <service-icon symbol="university"></service-icon>

                    <h3>Vadeli & Vadesiz Hesap</h3>
                    <p>
                        Birikimlerinizi güvenli şekilde değerlendirmeniz için modern hesap hizmetleri.
                    </p>
                    <a href="#" class="service-link">Hesap Aç</a>
                </div>

                <div class="service-card">
                    <service-icon symbol="money-check-alt"></service-icon>

                    <h3>Para Transferleri</h3>
                    <p>
                        EFT, FAST, Havale gibi tüm finansal transfer işlemleri kolaylaştırıldı.
                    </p>
                    <a href="#" class="service-link">Transfer Yap</a>
                </div>

                <div class="service-card">
                    <service-icon symbol="mobile-alt"></service-icon>

                    <h3>Dijital Bankacılık</h3>
                    <p>
                        Modern mobil bankacılık deneyimi ile tüm işlemlerinizi 7/24 kolayca yapın.
                    </p>
                    <a href="#" class="service-link">Giriş Yap</a>
                </div>

            </div>
        </div>
    </section>
</main>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>