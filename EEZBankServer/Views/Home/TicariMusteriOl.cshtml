@{
    ViewData["Title"] = "Ticari Müşteri Ol";
}

<link rel="stylesheet" href="~/site.css" />
<script src="~/site.js"></script>

<main>
    <!-- =============================== -->
    <!-- HERO BÖLÜMÜ -->
    <!-- =============================== -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-content">
                <h1>Ticari Müşteri Ol</h1>
                <p class="lead">
                    EEZBank güvencesi ile şirket hesabınızı hemen oluşturun.
                </p>
            </div>
        </div>
    </section>

    <!-- =============================== -->
    <!-- FORM ALANI -->
    <!-- =============================== -->
    <section class="services-section" style="padding:60px 0;">
        <div class="container">
            <h2 class="section-title">Ticari Hesap Başvuru Formu</h2>

            <div class="service-card" style="max-width:700px; margin:auto; text-align:left;">

                <form asp-action="CommercialRegister" method="post">

                    <!-- Şirket Bilgileri -->
                    <h3 style="margin-bottom:20px; color:var(--primary-color);">Şirket Bilgileri</h3>

                    <div style="margin-bottom:20px;">
                        <label>Şirket Adı</label>
                        <input type="text" name="CompanyName" class="form-control"
                               placeholder="Örn: Kılınç Yazılım A.Ş." required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>Vergi Numarası</label>
                        <input type="text" name="TaxNumber" class="form-control"
                               placeholder="10 haneli vergi numarası" required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>Vergi Dairesi</label>
                        <input type="text" name="TaxOffice" class="form-control"
                               placeholder="Örn: Isparta Vergi Dairesi" required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>Şirket Türü</label>
                        <select name="CompanyType" class="form-control" required>
                            <option value="">Seçiniz</option>
                            <option value="AŞ">Anonim Şirket</option>
                            <option value="LTD">Limited Şirket</option>
                            <option value="Şahıs">Şahıs Şirketi</option>
                            <option value="Kooperatif">Kooperatif</option>
                        </select>
                    </div>

                    <hr style="margin:30px 0;">

                    <!-- Yetkili Bilgileri -->
                    <h3 style="margin-bottom:20px; color:var(--primary-color);">Yetkili Kişi Bilgileri</h3>

                    <div style="margin-bottom:20px;">
                        <label>Ad Soyad</label>
                        <input type="text" name="AuthorizedFullName" class="form-control"
                               placeholder="Örn: Sıtkı Efe Kılınç" required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>TC Kimlik No</label>
                        <input type="text" name="AuthorizedTC" class="form-control"
                               placeholder="11 haneli kimlik numarası" required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>Telefon</label>
                        <input type="text" name="Phone" class="form-control"
                               placeholder="05xx xxx xx xx" required />
                    </div>

                    <div style="margin-bottom:20px;">
                        <label>E-Posta</label>
                        <input type="email" name="Email" class="form-control"
                               placeholder="example@example.com" required />
                    </div>

                    <hr style="margin:30px 0;">

                    <!-- Sözleşme -->
                    <div style="margin-bottom:20px;">
                        <label style="display:flex; align-items:center; gap:10px; cursor:pointer;">
                            <input type="checkbox" required />
                            <span>KVKK ve Ticari Müşteri Sözleşmesini kabul ediyorum.</span>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary" style="width:100%; margin-top:20px;">
                        Başvuruyu Gönder
                    </button>
                </form>

            </div>
        </div>
    </section>

</main>

<style>
    /* Basit form control uyumu */
    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        font-size: 1rem;
        margin-top: 5px;
        transition: 0.2s;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            outline: none;
            box-shadow: var(--shadow);
        }
</style>