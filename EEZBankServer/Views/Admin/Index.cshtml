@{
    ViewData["Title"] = "Admin Dashboard";
}
@using System.Globalization

<link rel="stylesheet" href="~/css/Admin/index.css/" />

<div class="admin-wrapper">
    <aside class="admin-sidebar" id="navMenu">
        <div class="nav-brand">
            <a href="/" class="logo">EEZ <span style="color: var(--eez-secondary);">ADMIN</span></a>
        </div>
        <ul class="admin-nav">
            <li><a href="#" class="admin-nav-link active"><i class="fas fa-chart-line"></i> Dashboard</a></li>
            <li><a href="#" class="admin-nav-link"><i class="fas fa-users"></i> Müşteri Yönetimi</a></li>
            <li><a href="#" class="admin-nav-link"><i class="fas fa-exchange-alt"></i> Para Transferleri</a></li>
            <li><a href="#" class="admin-nav-link"><i class="fas fa-chart-pie"></i> Kur Ayarları</a></li>
            <li><a href="#" class="admin-nav-link"><i class="fas fa-shield-alt"></i> Güvenlik Logları</a></li>
        </ul>
    </aside>

    <main class="admin-main">
        <header class="admin-header">
            <div class="header-left">
                <button class="nav-toggle" id="navToggle">
                    <span></span><span></span><span></span>
                </button>
            </div>

            <div class="user-actions">
                <button id="btnSeedData" class="btn btn-primary btn-sm me-3">
                    <i class="fas fa-database me-2"></i> Örnek Verileri Ekle
                </button>

                <div class="user-profile">
                    <span>Hoş geldin, <strong>Admin</strong></span>
                    <a href="/Account/Logout" class="btn btn-outline-danger btn-sm">Çıkış Yap</a>
                </div>
            </div>
        </header>

        <div class="container-fluid" style="padding: 30px;">
            <h2 class="section-title">Yönetim Paneli</h2>

            <div class="services-grid">
                <div class="service-card">
                    <div class="service-icon" style="color: var(--eez-primary);">
                        <i class="fas fa-users"></i>
                    </div>
                    <h4>Toplam Müşteri</h4>
                    <h2 style="color: var(--eez-primary);">@ViewBag.KullaniciSayisi</h2>
                </div>
                <div class="service-card">
                    <div class="service-icon" style="color: var(--eez-accent);">
                        <i class="fas fa-wallet"></i>
                    </div>
                    <h4>Toplam Mevduat</h4>
                    @* <h2 style="color: var(--eez-accent);">@ViewBag.BakiyelerToplami.ToString("C", new CultureInfo("tr-TR"))</h2> *@
                </div>
                <div class="service-card">
                    <div class="service-icon" style="color: var(--eez-danger);">
                        <i class="fas fa-exclamation-circle"></i>
                    </div>
                    <h4>Bekleyen Onaylar</h4>
                    <h2 style="color: var(--eez-danger);">48</h2>
                </div>
            </div>

            <div class="service-card" style="margin-top: 30px;">
                <h3 class="section-title" style="font-size: 1.2rem; margin-bottom: 20px;">Son İşlemler</h3>
                <div class="rates-table">
                    <div class="table-header">
                        <span>Müşteri</span>
                        <span>İşlem Türü</span>
                        <span>Tutar</span>
                        <span>Durum</span>
                    </div>
                    <div class="rate-row-modern">
                        <div class="col-name">Ahmet Yılmaz</div>
                        <div class="col-rate">EFT/Havale</div>
                        <div class="col-rate">₺5,000</div>
                        <div class="col-rate text-end"><span class="badge success">Tamamlandı</span></div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/admin.js"></script>
}